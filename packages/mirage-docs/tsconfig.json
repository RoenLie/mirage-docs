{
	"extends": "@roenlie/tsconfig",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": ".",
		"noEmit": false,
		"emitDeclarationOnly": true,
		"types": [
			"vite/client",
			"sharedworker"
		],
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable",
			"webworker"
		],
	},
	"include": [
		"./src/**/*.ts",
		"./src/**/*.js",
		"./typings/**/*.d.ts",
	],
	"exclude": [
		"./**/*.test.ts",
		"./**/*.bench.ts",
		"./**/*.editor.d.ts"
	]
}